@model TravelLog.Models.TicketWrap

@{
    ViewData["Title"] = "Create";
}

<h1>新增票種</h1>

<h4>票務管理</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TicketsName" class="control-label"></label>
                <input asp-for="TicketsName" class="form-control" />
                <span asp-validation-for="TicketsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketsType" class="control-label"></label>
                <input asp-for="TicketsType" class="form-control" />
                <span asp-validation-for="TicketsType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" checked/>
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefundPolicy" class="control-label"></label>
                <input asp-for="RefundPolicy" class="form-control" />
                <span asp-validation-for="RefundPolicy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確認新增" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">取消</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
