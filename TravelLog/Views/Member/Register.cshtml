@model TravelLog.ViewModels.UserRegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Register</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="./images/favicon.png" />
    <link href="./css/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .btn-primary {
            color: #fff;
            background-color: #593bdb;
            border-color: #593bdb;
        }

            .btn-primary:hover {
                color: #fff;
                background-color: #4425cb;
                border-color: #4123c0;
            }

            .btn-primary:focus,
            .btn-primary.focus {
                box-shadow: 0 0 0 0.2rem rgba(114, 88, 224, 0.5);
            }

            .btn-primary.disabled,
            .btn-primary:disabled {
                color: #fff;
                background-color: #593bdb;
                border-color: #593bdb;
            }

            .btn-primary:not(:disabled):not(.disabled):active,
            .btn-primary:not(:disabled):not(.disabled).active,
            .show > .btn-primary.dropdown-toggle {
                color: #fff;
                background-color: #4123c0;
                border-color: #3d21b5;
            }

                .btn-primary:not(:disabled):not(.disabled):active:focus,
                .btn-primary:not(:disabled):not(.disabled).active:focus,
                .show > .btn-primary.dropdown-toggle:focus {
                    box-shadow: 0 0 0 0.2rem rgba(114, 88, 224, 0.5);
                }
        /* 輸入框樣式 */
        .input-group .form-control {
            border: 1px solid #eaeaea;
            border-radius: 0.25rem;
            padding: 0.5rem;
            font-size: 1rem;
        }

        .btn-merge-input {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            height: calc(1.5em + 0.75rem + 2px);
            padding: 0 0.75rem;
            font-size: 1rem;
            color: #495057;
            background-color: #fff;
            border: 1px solid #eaeaea;
            border-left-color: #eaeaea;
            border-radius: 0 0.25rem 0.25rem 0;
            cursor: pointer;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .input-group .form-control {
            border-radius: 0.25rem 0 0 0.25rem;
        }

            .input-group .form-control:focus {
                z-index: 2;
            }

        .btn-merge-input:hover {
            background-color: #f8f9fa;
            border-color: #b4a7ef;
        }

        .btn-merge-input:focus {
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(89, 59, 219, 0.25);
        }

        .btn-merge-input:disabled {
            background-color: #e9ecef;
            color: #6c757d;
            cursor: not-allowed;
        }

        .spacer {
            height: 30px;
        }

        .authincation-content {
            margin: 0 auto;
            padding: 30px;
            border: 1px solid #eaeaea;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .auth-form {
            width: 100%;
        }
    </style>
</head>
<body class="h-100">
    <div class="authincation h-100">
        <div class="container-fluid h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12" style="color:black;">
                                <div class="auth-form">
                                    <h4 class="text-center mb-4 fw-bold fs-2"><strong>帳號註冊</strong></h4>
                                    @using (Html.BeginForm("Register", "Member", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="mb-3">
                                            <label for="registerName" class="media-body"><strong>帳號名稱</strong></label>
                                            <!-- 將 MiAccountName 改為 ViewModel 的 Name -->
                                            <input type="text" class="form-control" id="registerName" name="Name" required />
                                        </div>
                                        <div class="mb-3">
                                            <label for="registerEmail" class="form-label"><strong>Email</strong></label>
                                            <!-- 將 MiEmail 改為 Email -->
                                            <input type="email" class="form-control" id="registerEmail" name="Email" required />
                                        </div>
                                        <div class="mb-3">
                                            <label for="registerPassword" class="form-label">
                                                <strong>
                                                    密碼 (6-20 字元，需包含大寫英文字母)
                                                </strong>
                                            </label>
                                            <div class="input-group">
                                                <!-- 將 MiPasswordHash 改為 Password -->
                                                <input type="password" class="form-control" id="registerPassword" name="Password" required />
                                                <button type="button" class="btn-merge-input" id="togglePassword">
                                                    <i class="bi bi-eye-slash" id="passwordIcon"></i>
                                                </button>
                                            </div>
                                            <div id="passwordFormatError" class="text-danger d-none mt-1">
                                                密碼必須為 6-20 字元，並包含至少一個大寫英文字母。
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="registerPasswordConfirm" class="form-label"><strong>確認密碼</strong></label>
                                            <div class="input-group">
                                                <!-- 將 confirmPassword 改為 ConfirmPassword -->
                                                <input type="password" class="form-control" id="registerPasswordConfirm" name="ConfirmPassword" required />
                                                <button type="button" class="btn-merge-input" id="togglePasswordConfirm">
                                                    <i class="bi bi-eye" id="passwordConfirmIcon"></i>
                                                </button>
                                            </div>
                                            <div id="passwordError" class="text-danger d-none mt-1">
                                                與密碼不相符!
                                            </div>
                                        </div>
                                        <div class="spacer"></div>
                                        <div class="mb-3">
                                            <button type="submit" class="btn btn-primary w-100" onclick="return validateForm()">
                                                註冊
                                            </button>
                                        </div>
                                    } <!-- 結束 BeginForm 區塊 -->
                                </div> <!-- end auth-form -->
                            </div> <!-- end col-xl-12 -->
                            <div class="new-account mt-3">
                                <p>
                                    已經有帳號了?
                                    <a asp-controller="Member" asp-action="Login" class="text-primary">登入</a>
                                </p>
                            </div>
                        </div> <!-- end row no-gutters -->
                    </div> <!-- end authincation-content -->
                </div> <!-- end col-md-6 -->
            </div> <!-- end row -->
        </div> <!-- end container-fluid -->
    </div> <!-- end authincation -->

    <script>
        const passwordInput = document.getElementById('registerPassword');
        const passwordConfirmInput = document.getElementById('registerPasswordConfirm');
        const passwordFormatError = document.getElementById('passwordFormatError');
        const passwordError = document.getElementById('passwordError');
        const togglePasswordButton = document.getElementById('togglePassword');
        const passwordIcon = document.getElementById('passwordIcon');
        const togglePasswordConfirmButton = document.getElementById('togglePasswordConfirm');
        const passwordConfirmIcon = document.getElementById('passwordConfirmIcon');

        // 密碼格式規則：6-20 字元，包含至少一個大寫字母
        const passwordRegex = /^(?=.*[A-Z])[A-Za-z\d]{6,20}$/;

        // 密碼格式檢查（離開輸入框時）
        passwordInput.addEventListener('blur', () => {
            if (!passwordRegex.test(passwordInput.value)) {
                passwordFormatError.classList.remove('d-none');
            } else {
                passwordFormatError.classList.add('d-none');
            }
        });

        // 確認密碼檢查（離開輸入框時）
        passwordConfirmInput.addEventListener('blur', () => {
            if (passwordInput.value !== passwordConfirmInput.value) {
                passwordError.classList.remove('d-none');
            } else {
                passwordError.classList.add('d-none');
            }
        });

        togglePasswordButton.addEventListener('click', () => {
            const isPasswordHidden = passwordInput.type === 'password';
            passwordInput.type = isPasswordHidden ? 'text' : 'password';
            passwordIcon.classList.toggle('bi-eye', !isPasswordHidden);
            passwordIcon.classList.toggle('bi-eye-slash', isPasswordHidden);
        });

        togglePasswordConfirmButton.addEventListener('click', () => {
            const isPasswordConfirmHidden = passwordConfirmInput.type === 'password';
            passwordConfirmInput.type = isPasswordConfirmHidden ? 'text' : 'password';
            passwordConfirmIcon.classList.toggle('bi-eye', !isPasswordConfirmHidden);
            passwordConfirmIcon.classList.toggle('bi-eye-slash', isPasswordConfirmHidden);
        });

        // 表單提交時的最終驗證
        function validateForm() {
            const isPasswordValid = passwordRegex.test(passwordInput.value);
            const isPasswordMatch = passwordInput.value === passwordConfirmInput.value;

            if (!isPasswordValid) {
                passwordFormatError.classList.remove('d-none');
            }
            if (!isPasswordMatch) {
                passwordError.classList.remove('d-none');
            }
            return isPasswordValid && isPasswordMatch;
        }
    </script>
    <!-- Required vendors -->
    <script src="./vendor/global/global.min.js"></script>
    <script src="./js/quixnav-init.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
