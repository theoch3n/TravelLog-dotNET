@model TravelLog.Models.MemberInformation
@{
    ViewData["Title"] = "Reset Password Request";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Reset Password Request</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .btn-primary {
            color: #fff;
            background-color: #593bdb;
            border-color: #593bdb;
        }

            .btn-primary:hover {
                color: #fff;
                background-color: #4425cb;
                border-color: #4123c0;
            }

        .authincation-content {
            margin: 0 auto;
            padding: 30px;
            border: 1px solid #eaeaea;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .auth-form {
            width: 100%;
        }
    </style>
</head>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container-fluid h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12 font-color:black">
                                <div class="auth-form">
                                    <h4 class="text-center mb-4 fw-bold">重設密碼請求</h4>

                                    <!-- 顯示 TempData 訊息 -->
                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @TempData["ErrorMessage"]
                                        </div>
                                    }
                                    @if (TempData["SuccessMessage"] != null)
                                    {
                                        <div class="alert alert-success" role="alert">
                                            @TempData["SuccessMessage"]
                                        </div>
                                    }

                                    <!-- 輸入 Email -->
                                    @using (Html.BeginForm("ResetPasswordRequest", "Member", FormMethod.Post))
                                    {
                                        <div class=" mb-3">
                                            <label for="email"><strong>Email</strong></label>
                                            <input type="email" name="email" class="form-control" placeholder="輸入您的電子郵件" required />
                                        </div>
                                        <div class="mb-3">
                                            <label for="inputCode" class="form-label"><strong>驗證碼</strong></label>
                                            <div class="input-group">
                                                <input type="text" name="inputCode" id="inputCode" class="form-control" placeholder="輸入驗證碼" />
                                                <button type="button" class="btn btn-secondary" id="getVerificationCode">
                                                    獲取驗證碼
                                                </button>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn btn-primary">發送重設密碼連結</button>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
     <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
