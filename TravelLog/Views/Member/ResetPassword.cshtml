@model TravelLog.Models.MemberInformation
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Reset Password</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        .btn-primary {
            color: #fff;
            background-color: #593bdb;
            border-color: #593bdb;
        }

            .btn-primary:hover {
                color: #fff;
                background-color: #4425cb;
                border-color: #4123c0;
            }

        .authincation-content {
            margin: 0 auto;
            padding: 30px;
            border: 1px solid #eaeaea;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .auth-form {
            width: 100%;
        }
    </style>
</head>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container-fluid h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12 font-color:black">
                                <div class="auth-form">
                        <h4 class="text-center mb-4 fw-bold">重設密碼</h4>

                        <!-- 顯示 TempData 訊息 -->
                                    @if (TempData["ErrorMessage"] != null)
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @TempData["ErrorMessage"]
                                        </div>
                                    }

                        <!-- 重設密碼表單 -->
                                    @using (Html.BeginForm("ResetPassword", "Member", FormMethod.Post))
                                    {
                                        <input type="hidden" name="MiEmail" value="@Model.MiEmail" />
                                        <input type="hidden" name="MiEmailConfirmationToken" value="@Model.MiEmailConfirmationToken" />

                                        <div class="mb-3">
                                            <label for="newPassword"><strong>新密碼</strong></label>
                                            <input type="password" name="newPassword" class="form-control" placeholder="輸入新密碼" required />
                                        </div>
                                        <div class="mb-3">
                                            <label for="confirmPassword"><strong>確認密碼</strong></label>
                                            <input type="password" name="confirmPassword" class="form-control" placeholder="再次輸入密碼" required />
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100">重設密碼</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
