@model TravelLog.Models.MemberInformation
@{
    ViewData["Title"] = "Login";
    Layout= null;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Focus - Bootstrap Admin Dashboard </title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="./images/favicon.png">
    <link href="./css/style.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
    <style>
        .btn-primary {
            color: #fff;
            background-color: #593bdb;
            border-color: #593bdb;
        }

            .btn-primary:hover {
                color: #fff;
                background-color: #4425cb;
                border-color: #4123c0;
            }

            .btn-primary:focus,
            .btn-primary.focus {
                box-shadow: 0 0 0 0.2rem rgba(114, 88, 224, 0.5);
            }

            .btn-primary.disabled,
            .btn-primary:disabled {
                color: #fff;
                background-color: #593bdb;
                border-color: #593bdb;
            }

            .btn-primary:not(:disabled):not(.disabled):active,
            .btn-primary:not(:disabled):not(.disabled).active,
            .show > .btn-primary.dropdown-toggle {
                color: #fff;
                background-color: #4123c0;
                border-color: #3d21b5;
            }

                .btn-primary:not(:disabled):not(.disabled):active:focus,
                .btn-primary:not(:disabled):not(.disabled).active:focus,
                .show > .btn-primary.dropdown-toggle:focus {
                    box-shadow: 0 0 0 0.2rem rgba(114, 88, 224, 0.5);
                }

        /* 輸入框樣式 */
        .input-group .form-control {
            border: 1px solid #eaeaea;
            /* 與按鈕邊框一致 */
            border-radius: 0.25rem;
            /* 左右圓角統一 */
            padding: 0.5rem;
            font-size: 1rem;
        }

        .btn-merge-input {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            height: calc(1.5em + 0.75rem + 2px);
            /* 與輸入框高度一致 */
            padding: 0 0.75rem;
            font-size: 1rem;
            color: #495057;
            /* 與輸入框文字顏色一致 */
            background-color: #fff;
            border: 1px solid #eaeaea;
            border-left-color: #eaeaea;
            border-radius: 0 0.25rem 0.25rem 0;
            cursor: pointer;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .input-group .form-control {
            border-radius: 0.25rem 0 0 0.25rem;
            /* 輸入框左側圓角 */
        }

        .input-group .form-control:focus {
            z-index: 2;
            /* 確保輸入框焦點效果位於按鈕之上 */
        }

        .btn-merge-input:hover {
            background-color: #f8f9fa;
            /* 按鈕懸停背景色 */
            border-color: #b4a7ef;
            /* 按鈕懸停邊框色 */
        }

        .btn-merge-input:focus {
            outline: none;
            /* 移除按鈕的焦點邊框 */
            box-shadow: 0 0 0 0.2rem rgba(89, 59, 219, 0.25);
            /* 焦點效果 */
        }

        .btn-merge-input:disabled {
            background-color: #e9ecef;
            /* 禁用狀態背景色 */
            color: #6c757d;
            /* 禁用狀態文字色 */
            cursor: not-allowed;
            /* 禁用狀態鼠標效果 */
        }

        .spacer {
            height: 30px;
            /* 設置空白高度 */
        }

        .authincation-content {

            margin: 0 auto;
            padding: 30px;
            border: 1px solid #eaeaea;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .auth-form {
            width: 100%;
        }
    </style>
</head>

<body class="h-100 ">
    <div class="authincation h-100">
        <div class="container-fluid h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <h4 class="text-center mb-4 fs-2"><strong>帳號登入</strong></h4>
                                    @using (Html.BeginForm("Login", "Member", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            <label><strong>帳號名稱/Email</strong></label>
                                            <input type="email" class="form-control" value="">
                                        </div>
                                        <div class="form-group">
                                            <label><strong>密碼</strong></label>
                                            <div class="input-group">
                                                <input type="password" class="form-control" id="registerPassword"
                                                    name="password" required />
                                                <button type="button" class="btn-merge-input" id="togglePassword">
                                                    <i class="bi bi-eye-slash" id="passwordIcon"></i>
                                                </button>
                                            </div>
                                            <div class="form-row d-flex justify-content-between mt-4 mb-2">
                                                <div class="form-group">
                                                    <div class="form-check ml-2">
                                                        <input class="form-check-input" type="checkbox"
                                                            id="basic_checkbox_1">
                                                        <label class="form-check-label"
                                                            for="basic_checkbox_1">記住此帳號</label>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <a href="page-forgot-password.html">忘記密碼?</a>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <button type="submit" class="btn btn-primary btn-block">登入</button>
                                            </div>
                                            </div>
                                    }
                                    <div class="new-account mt-3">
                                        <a asp-controller="Member" asp-action="Register" class="text-primary">註冊</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="./vendor/global/global.min.js"></script>
    <script src="./js/quixnav-init.js"></script>
    <script src="./js/custom.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const passwordInput = document.getElementById('registerPassword');
        const togglePasswordButton = document.getElementById('togglePassword');
        const passwordIcon = document.getElementById('passwordIcon');

        // 密碼切換顯示/隱藏邏輯
        togglePasswordButton.addEventListener('click', () => {
            const isPasswordHidden = passwordInput.type === 'password';
            passwordInput.type = isPasswordHidden ? 'text' : 'password';
            passwordIcon.classList.toggle('bi-eye', !isPasswordHidden);
            passwordIcon.classList.toggle('bi-eye-slash', isPasswordHidden);
        });
    </script>

</body>
