@model TravelLog.Models.OrderManageWrap

@{
    ViewData["Title"] = "OrderManage";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">訂單管理</h1>

            <!-- 篩選表單 -->
            <form asp-action="OrderManage" method="get" class="mb-4">
                <div class="row">
                    <div class="col-md-3">
                        <label>訂單狀態</label>
                        <select name="status" class="form-control">
                            <option value="">全部狀態</option>
                            <option value="1" selected="@(Model.FilterStatus == 1)">待付款</option>
                            <option value="2" selected="@(Model.FilterStatus == 2)">已付款</option>
                            <option value="3" selected="@(Model.FilterStatus == 3)">已取消</option>
                            <option value="4" selected="@(Model.FilterStatus == 4)">已完成</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label>付款狀態</label>
                        <select name="paymentStatus" class="form-control">
                            <option value="">全部付款狀態</option>
                            <option value="1" selected="@(Model.FilterPaymentStatus == 1)">未付款</option>
                            <option value="2" selected="@(Model.FilterPaymentStatus == 2)">已付款</option>
                            <option value="3" selected="@(Model.FilterPaymentStatus == 3)">已退款</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label>開始日期</label>
                        <input type="date" name="startDate" class="form-control" value="@(Model.FilterStartDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-3">
                        <label>結束日期</label>
                        <input type="date" name="endDate" class="form-control" value="@(Model.FilterEndDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">篩選</button>
                    </div>
                </div>
            </form>

            <!-- 訂單列表 -->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>訂單序號</th>
                        <th>訂單時間</th>
                        <th>總金額</th>
                        <th>訂單狀態</th>
                        <th>付款狀態</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Orders) {
                        <tr>
                            <td>@(Model.Orders.IndexOf(item) + 1)</td>
                            <td>@item.order.OrderTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>@item.order.OrderTotalAmount.ToString("C")</td>

                            <!-- 訂單狀態 -->
                            <td>
                                @switch (item.order.OrderStatus) {
                                    case 1:
                                        <span class="badge bg-warning">待付款</span>
                                        ; break;
                                    case 2:
                                        <span class="badge bg-info">已付款</span>
                                        ; break;
                                    case 3:
                                        <span class="badge bg-danger text-white">已取消</span>
                                        ; break;
                                    case 4:
                                        <span class="badge bg-success">已完成</span>
                                        ; break;
                                    default:
                                        <span class="badge bg-secondary">未知</span>
                                        ; break;
                                }
                            </td>

                            <!-- 付款狀態 -->
                            <td>
                                @switch (item.order.OrderPaymentStatus) {
                                    case 1:
                                        <span class="badge bg-warning">未付款</span>
                                        ; break;
                                    case 2:
                                        <span class="badge bg-info">已付款</span>
                                        ; break;
                                    case 3:
                                        <span class="badge bg-danger text-white">已退款</span>
                                        ; break;
                                    default:
                                        <span class="badge bg-secondary">未知</span>
                                        ; break;
                                }
                            </td>

                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Order" asp-action="OrderDetail" asp-route-id="@item.order.OrderId" class="btn btn-sm btn-info">詳情</a>
                                    <a asp-controller="Order" asp-action="OrderEdit" asp-route-id="@item.order.OrderId" class="btn btn-sm btn-warning">編輯</a>
                                    <button type="button" class="btn btn-sm btn-danger" onclick="cancelOrder(@item.order.OrderId)">取消</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- 分頁控制項 -->
            <nav aria-label="訂單分頁">
                <ul class="pagination justify-content-center">
                    @if (Model.CurrentPage > 1) {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("OrderManage", new { page = Model.CurrentPage - 1 })">上一頁</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++) {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("OrderManage", new { page = i })">@i</a>
                        </li>
                    }

                    @if (Model.CurrentPage < Model.TotalPages) {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("OrderManage", new { page = Model.CurrentPage + 1 })">下一頁</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="../js/Order/OrderManage.js"></script>