@model TravelLog.ViewModels.UserAccountViewModel

@{
    ViewData["Title"] = "編輯會員";
}

<h2>編輯會員</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>帳號名稱</label>
        <input type="text" name="UserName" class="form-control" value="@Model.UserName" readonly />
    </div>
    <div class="form-group">
        <label>信箱</label>
        <input type="text" name="UserEmail" class="form-control" value="@Model.UserEmail" readonly />
    </div>
    <div class="form-group">
        <label>手機</label>
        <input type="text" name="UserPhone" class="form-control" value="@Model.UserPhone" readonly />
    </div>
    <div class="form-group">
        <label>是否啟用</label>
        <div class="text-start align-middle">
            <input type="checkbox" name="UserEnabled" class="form-check-input" style="transform: translate(5px, -1px);" @(Model.UserEnabled ? "checked" : "") />
        </div>
    </div>
    <div class="form-group">
        <label>是否驗證 Email</label>
        <div class="text-start align-middle">
            <input type="checkbox" name="IsEmailVerified" class="form-check-input" style="transform: translate(5px, -1px);" @(Model.IsEmailVerified ? "checked" : "") />
        </div>
    </div>
    <div class="form-group">
        <label>使用者角色 (勾選表示管理員)</label>
        <div class="text-start align-middle">
            <input type="checkbox" name="UserRole" class="form-check-input" style="transform: translate(5px, -1px);" @(Model.UserRole == 1 ? "checked" : "") />
        </div>
    </div>
    <div class="form-group">
        <label>創建日期</label>
        <input type="text" class="form-control" value="@Model.UserCreateDate.ToString("yyyy/MM/dd")" readonly />
    </div>

    <!-- 隱藏相關資料 -->
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <input type="hidden" name="UserPdId" value="@Model.UserPdId" />
    <input type="hidden" name="UserPdPasswordHash" value="@Model.UserPdPasswordHash" />
    <input type="hidden" name="UserPdToken" value="@Model.UserPdToken" />

    <!-- 按鈕區塊：重製與儲存統一為一個區塊 -->
    <div class="form-group mt-3">
        <button type="reset" class="btn btn-outline-secondary" style="display:inline-block;">重製</button>[]
        <button type="submit" class="btn btn-outline-primary">儲存</button>
    </div>
</form>
